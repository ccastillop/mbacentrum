- txt = []
- if controller_name != 'sessions'
  - txt << link_to( "Iniciar sesión", new_session_path(resource_name))
- if devise_mapping.registerable? && controller_name != 'registrations'
  - txt << link_to( "Regístrese", new_registration_path(resource_name))
- if devise_mapping.recoverable? && controller_name != 'passwords'
  - txt << link_to( "¿Olvidó su clave?", new_password_path(resource_name))
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  - txt << link_to( "¿No recibió confirmación por email?", new_confirmation_path(resource_name))
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  - txt <<  link_to( "¿No recibió instrucciones de desbloqueo?", new_unlock_path(resource_name))

= raw txt.join(" | ")